{
  "arrow-parens": "avoid",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "overrides": [
    {
      "files": [
        ".prettierrc",
        ".babelrc",
        ".babelrc.server",
        ".jsbeautifyrc",
        ".stylelintrc"
      ],
      "options": { "parser": "json" }
    },
    {
      "files": ["*.ts", ".tsx"],
      "options": { "parser": "typescript" }
    },
    {
      "files": ["*.md"],
      "options": { "parser": "markdown" }
    }
  ],
  "printWidth": 80,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false
}
